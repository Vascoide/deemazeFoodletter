<div class="row align-items-center main-content">
    <div class="col d-flex justify-content-center align-self-center">
        <div class="card text-center main-card">
            <div class="card-body ignore-form-css">
                <h2 class="blue-highlight card-title-text">Your specialities</h2>
                <div class="d-flex justify-content-center align-self-center">
                    <p class="w-75"> Add your information and daily specialities. </p>
                </div>
                <%= form_with model: @restaurant do |form| %>
                    <div class="form-group mb-3 px-5">
                        <%= form.label :date, class: "blue-highlight"%>
                        <%= form.date_field :date %>
                    </div>
                    <div class="form-group mb-3 px-5">
                        <%= form.label :name, class: "blue-highlight"%>
                        <%= form.text_field :name, class:"form-control" %>
                    </div>
                    <div class="form-group mb-3 px-5">
                        <label class="blue-highlight">Specialities</label>
                        <div class="dishes">
                            <%= form.fields_for :dishes do |dish| %>
                                <%= render 'dish_fields', f: dish %>
                            <% end %>
                        </div>
                        <div class="links mt-3">
                            <%= link_to_add_association "Add more", form, :dishes, data: {association_insertion_node: '.dishes', association_insertion_method: :append}, class: "add-more-button" %>
                        </div>
                    </div>
                    <%= form.submit class: "btn button-subscribe mb-3 " "Submit" %>
                    <%= link_to "Cancel", root_path, class:"blue-highlight d-block" %>
                <% end %>
            </div>
        </div>
    </div>
</div>  